using NewsFlow.Web

@model List<NewsFlow.Web.ViewModels.FeedMetadataViewModel>
@{
    ViewData["Title"] = "NewsFlow: Minimalistic RSS Reader";
}

<div class="text-center">
    <h1 class="display-4">Available Feeds</h1>

    @if (Model.Count == 0)
    {
        <p>No feeds are added at the moment...</p>
    }
    else
    {
        @foreach (var feed in Model)
        {
            <div>
                <h5>feed.Name</h5>
                <p>feed.Descriptions</p>
            </div>
        }
    }
</div>

