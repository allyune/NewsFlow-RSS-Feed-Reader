@model NewsFlow.Web.ViewModels.FeedViewModel

@{
    Layout = "_FeedReaderLayout";
    ViewData["Title"] = "NewsFlow: Minimalistic RSS Reader";
}

@if (ViewData.Model == null)
 {
    <h3>Feed not found</h3>
 }
 else
 {
<div class="feed-header">
    <div class="feed-controls">

        <div class="feed-control-buttons">
            <button type="button" class="btn-reload btn">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-clockwise" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M8 3a5 5 0 1 0 4.546 2.914.5.5 0 0 1 .908-.417A6 6 0 1 1 8 2v1z" />
                    <path d="M8 4.466V.534a.25.25 0 0 1 .41-.192l2.36 1.966c.12.1.12.284 0 .384L8.41 4.658A.25.25 0 0 1 8 4.466z" />
                </svg>
                <span>Reload</span>
            </button>

            <button type="button" class="btn" id="btn-unsubscribe">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-circle" viewBox="0 0 16 16">
                    <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                    <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z" />
                </svg>
                <span>Unsubscribe</span>
            </button>

            <div id="datepicker">
                <span>
                    <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="currentColor" class="bi bi-calendar-week" viewBox="0 0 16 16">
                        <path d="M11 6.5a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5v-1zm-3 0a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5v-1zm-5 3a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5v-1zm3 0a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5v-1z" />
                        <path d="M3.5 0a.5.5 0 0 1 .5.5V1h8V.5a.5.5 0 0 1 1 0V1h1a2 2 0 0 1 2 2v11a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V3a2 2 0 0 1 2-2h1V.5a.5.5 0 0 1 .5-.5zM1 4v10a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V4H1z" />
                    </svg>
                </span>
            </div>
        </div>

        <div class="article-filters">
            <div class="form-outline" id="article-searchbar">
                <input type="search" id="article-search-input" class="form-control" placeholder="Find articles..." aria-label="Search" />
            </div>
        </div>
    </div>
    <p class="feed-updated">
        Last Updated:
        @if (@Model.LastUpdated is not null)
        {

            @Model.LastUpdated?.ToShortDateString();
            @Model.LastUpdated?.ToShortTimeString();
        }
        else
        {
           <span>N/A</span>
        }
    </p>
</div>

<div class="loading-container">
    Loading...
</div>

<div class="articles-container visibility-none">

</div>
}
@section Scripts {
    <script src="~/js/read-feed.js"></script>
}



